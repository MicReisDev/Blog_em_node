{{#each erros}}
  <div class="alert alert-danger" role="alert">
  {{erro}}
</div>
{{/each}}

    <h1>Nova postagem:</h1>


  <form action="/admin/postagens/nova" method="post">

    <label for="titulo">Titulo:</label>
    <input type="text" name="titulo" class="form-control" required>

    <label for="slug">Slug:</label>
    <input type="text" name="slug" class="form-control" required>

    <label for="descricao">Descricão:</label>
    <input type="text" name="descricao" class="form-control" required>

    <label for="conteudo">Conteudo:</label>
    <textarea name="conteudo" cols="30" rows="5" class="form-control"></textarea required>
    
    <label for="categoria">Categoria:</label>
    <select name="categoria" class="form-select" required>
      {{#each categorias}}
      <option value="{{_id}}">{{nome}}</option>
      {{else}}
      <option value="0">Não existem categorias registradas</option>
      {{/each}}
    </select>

    <br>
    <button type="submit" class="btn btn-primary">postagens</button>
  </form>
